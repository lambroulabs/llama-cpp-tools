# Maintainer: Alexander Lambrou <alexanderlambrou0602@gmail.com>

pkgname=llama-cpp-tools
pkgver=0.1.0
pkgrel=1
pkgdesc="C++ llama.cpp function calling tool registry"
arch=('x86_64')
url="https://github.com/lambroulabs/llama-cpp-tools"
license=('MIT')
depends=('glibc')
makedepends=('cmake' 'make' 'gcc' 'nlohmann-json' 'catch2')
source=("https://github.com/lambroulabs/llama-cpp-tools/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
  cd "$srcdir/llama-cpp-tools-$pkgver"
  cmake -B build -S . -DCMAKE_BUILD_TYPE=Release
  cmake --build build
}
package() {
  cd "$srcdir/llama-cpp-tools-$pkgver"
  DESTDIR="$pkgdir" cmake --install build
}
